{
  "geode": "5.0.0-beta.3",
  "gd": {
    "win": "2.2081",
    "android": "2.2081",
    "mac": "2.2081",
    "ios": "2.2081"
  },
  "version": "v1.2.2",
  "id": "ninkaz.blending_glow",
  "name": "Blending Glow",
  "developer": "NinKaz",
  "description": "Makes player glow blending",
  "links": {
    "source": "https://github.com/flurrybun/blending-glow"
  },
  "tags": ["customization", "offline"],
  "settings": {
    "blending-glow": {
      "name": "Blending Glow",
      "description": "Make the player glow blending.",
      "type": "bool",
      "default": true
    },
    "enable-robot-spider": {
      "name": "Blending Glow on Robots & Spiders",
      "description": "Enables blending glow on robots and spiders, which didn't have blending glow in 2.1.",
      "type": "bool",
      "default": true,
      "enable-if": "blending-glow"
    },
    "brighter-glow": {
      "name": "Increase Glow Brightness",
      "description": "Increases glow brightness by 50% to emulate the pre-2.2 glow color.",
      "type": "bool",
      "default": false
    }
  }
}
